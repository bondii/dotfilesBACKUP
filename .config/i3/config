# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Media/audio controls
# Raise volume 2%
bindsym XF86AudioRaiseVolume exec amixer set Master playback level 2%+ unmute
# Lower volume 2%
bindsym XF86AudioLowerVolume exec amixer set Master playback level 2%- unmute
# Mute
bindsym XF86AudioMute exec amixer set Master toggle
# Play/pause
bindsym F7 exec playerctl play-pause
# Skip to next song
bindsym F8 exec playerctl next

# i3 blocks mediaplayer signals, for updating i3blocks in the i3bar
bindsym --release F7 exec pkill -SIGRTMIN+11 i3blocks
bindsym --release F8 exec pkill -SIGRTMIN+11 i3blocks
bindsym --release XF86AudioLowerVolume exec pkill -SIGRTMIN+10 i3blocks
bindsym --release XF86AudioRaiseVolume exec pkill -SIGRTMIN+10 i3blocks
bindsym --release XF86AudioMute exec pkill -SIGRTMIN+10 i3blocks

# Lock screen
bindsym $mod+shift+x exec /home/bondi/.config/i3/lock.sh

######################
# Print screen binds #
######################
# Select area to be printed and save to the system clipboard
bindsym Shift+Print exec maim -s | xclip -selection clipboard -t image/png

# Print only the active window and save to the system clipboard
bindsym Ctrl+Shift+Print exec maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

# Print the current view and save to ~/Pictures/ with formatted date and time as name
bindsym Print exec maim ~/pictures/screenshot_$(date +%Y%m%d)_$(date +%H%M%S).png     


